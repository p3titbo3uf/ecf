{% extends 'base.html.twig' %}

{% block title %}Branches{% endblock %}

{% block body %}
    <h1>Branches</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ branch.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ branch.name }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ branch.zipcode }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ branch.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_branches_index') }}">back to list</a>

    <a href="{{ path('app_branches_edit', {'id': branch.id}) }}">edit</a>

    {{ include('branches/_delete_form.html.twig') }}
{% endblock %}
