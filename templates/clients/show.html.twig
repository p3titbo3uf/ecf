{% extends 'base.html.twig' %}

{% block title %}Clients{% endblock %}

{% block body %}
    <h1>Clients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Secret</th>
                <td>{{ client.secret }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ client.active ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Short_description</th>
                <td>{{ client.shortDescription }}</td>
            </tr>
            <tr>
                <th>Full_description</th>
                <td>{{ client.fullDescription }}</td>
            </tr>
            <tr>
                <th>Logo_url</th>
                <td>{{ client.logoUrl }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ client.url }}</td>
            </tr>
            <tr>
                <th>Dpo</th>
                <td>{{ client.dpo }}</td>
            </tr>
            <tr>
                <th>Technical_contact</th>
                <td>{{ client.technicalContact }}</td>
            </tr>
            <tr>
                <th>Commercial_contact</th>
                <td>{{ client.commercialContact }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_clients_index') }}">back to list</a>

    <a href="{{ path('app_clients_edit', {'id': client.id}) }}">edit</a>

    {{ include('clients/_delete_form.html.twig') }}
{% endblock %}
